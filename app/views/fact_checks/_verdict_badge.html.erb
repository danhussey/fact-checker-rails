<%
  config = {
    "true" => { bg: "bg-green-500/15", text: "text-green-400", border: "border-green-500/30", glow: "glow-true" },
    "mostly_true" => { bg: "bg-lime-500/15", text: "text-lime-400", border: "border-lime-500/30", glow: "glow-true" },
    "half_true" => { bg: "bg-amber-500/15", text: "text-amber-400", border: "border-amber-500/30", glow: "glow-misleading" },
    "mostly_false" => { bg: "bg-orange-500/15", text: "text-orange-400", border: "border-orange-500/30", glow: "glow-false" },
    "false" => { bg: "bg-red-500/15", text: "text-red-400", border: "border-red-500/30", glow: "glow-false" },
    "unverified" => { bg: "bg-zinc-500/15", text: "text-zinc-400", border: "border-zinc-500/30", glow: "glow-unverified" }
  }
  styles = config[fact_check.verdict] || config["unverified"]
%>

<div class="flex flex-col items-end gap-0.5">
  <span class="px-2.5 py-0.5 rounded-full text-xs font-medium border <%= styles[:bg] %> <%= styles[:text] %> <%= styles[:border] %> <%= styles[:glow] %>">
    <%= fact_check.verdict_label %>
  </span>
  <% if fact_check.confidence_label %>
    <span class="font-mono text-[9px] text-muted uppercase tracking-wider"><%= fact_check.confidence_label %></span>
  <% end %>
</div>
