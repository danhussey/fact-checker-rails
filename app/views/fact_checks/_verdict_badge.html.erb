<%
  colors = {
    "true" => "bg-green-500/20 text-green-400 border-green-500/30",
    "mostly_true" => "bg-lime-500/20 text-lime-400 border-lime-500/30",
    "half_true" => "bg-yellow-500/20 text-yellow-400 border-yellow-500/30",
    "mostly_false" => "bg-orange-500/20 text-orange-400 border-orange-500/30",
    "false" => "bg-red-500/20 text-red-400 border-red-500/30",
    "unverified" => "bg-zinc-500/20 text-zinc-400 border-zinc-500/30"
  }
  color_class = colors[fact_check.verdict] || colors["unverified"]
%>

<div class="flex flex-col items-end">
  <span class="px-3 py-1 rounded-full text-sm font-medium border <%= color_class %>">
    <%= fact_check.verdict_label %>
  </span>
  <% if fact_check.confidence_label %>
    <span class="text-xs text-zinc-500 mt-1"><%= fact_check.confidence_label %></span>
  <% end %>
</div>
